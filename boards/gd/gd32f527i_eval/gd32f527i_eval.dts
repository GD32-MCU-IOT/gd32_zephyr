/dts-v1/;

#include <gd/gd32f527/gd32f527is.dtsi>
#include "gd32f527i_eval-pinctrl.dtsi"
#include <zephyr/dt-bindings/dma/gd32_dma.h>

/ {
	model = "GigaDevice GD32F527I-EVAL";
	compatible = "gd,gd32f527i-eval";

	chosen {
		zephyr,flash = &flash0;
		zephyr,sram = &sram0;
		zephyr,console = &usart0;
		zephyr,shell-uart = &usart0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led0 {
			gpios = <&gpiof 7 GPIO_ACTIVE_HIGH>;
			label = "LED0";
		};
	};

	aliases {
		led0 = &led0;
		eeprom-0 = &eeprom0;
	};
};
&gpiob {
	status = "okay";
};
&gpiof {
	status = "okay";
};

&gpioi {
	status = "okay";
};

&dma0 {
	status = "okay";
};

&dma1 {
	status = "okay";
};

&i2c0 {
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
	dmas = <&dma0 7 1 0x440 0>, <&dma0 5 1 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <100000>;
	eeprom0: eeprom@50 {
		compatible = "atmel,at24";
		reg = <0x50>;
		status = "okay";
		size = <256>;
		pagesize = <8>;
		address-width = <8>;
		timeout = <5>;
	};
};

&i2c1 {
	status = "disabled";
	pinctrl-0 = <&i2c1_default>;
	pinctrl-names = "default";
	dmas = <&dma0 7 7 0x440 0>, <&dma0 3 7 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <100000>;
};

&i2c2 {
	status = "disabled";
	pinctrl-0 = <&i2c2_default>;
	pinctrl-names = "default";
	dmas = <&dma0 4 3 0x440 0>, <&dma0 2 3 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <100000>;
};
&i2c3 {
	status = "disabled";
	pinctrl-0 = <&i2c3_default>;
	pinctrl-names = "default";
	dmas = <&dma0 6 0 0x440 0>, <&dma0 1 0 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <100000>;
};

&i2c4 {
	status = "disabled";
	pinctrl-0 = <&i2c4_default>;
	pinctrl-names = "default";
	dmas = <&dma0 3 1 0x440 0>, <&dma0 1 1 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <400000>;

};

&i2c5 {
	status = "disabled";
	pinctrl-0 = <&i2c5_default>;
	pinctrl-names = "default";
	dmas = <&dma0 7 6 0x440 0>, <&dma0 5 6 0x480 0>;
	dma-names = "tx", "rx";
	clock-frequency = <400000>;
};

&dma1 {
	status = "okay";
};

&usart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&usart0_default>;
	pinctrl-names = "default";
	dmas = <&dma1 7 4 0 0>, <&dma1 5 4 0 0>;
	dma-names = "tx", "rx";
};

&spi5 {
	status = "okay";
	pinctrl-0 = <&spi5_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpioi 8 GPIO_ACTIVE_LOW>;

	nor_flash: gd25q16@0 {
		compatible = "jedec,spi-nor";
		size = <0x1000000>;
		reg = <0>;
		spi-max-frequency = <4000000>;
		status = "okay";
		jedec-id = [c8 40 15];
	};
};
