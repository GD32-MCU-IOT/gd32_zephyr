/dts-v1/;

#include <gd/gd32f527/gd32f527is.dtsi>
#include "gd32f527i_eval-pinctrl.dtsi"
#include <zephyr/dt-bindings/dma/gd32_dma.h>
/ {
	model = "GigaDevice GD32F527I-EVAL";
	compatible = "gd,gd32f527i-eval";

	chosen {
		zephyr,flash = &flash0;
		zephyr,sram = &sram0;
		zephyr,console = &usart0;
		zephyr,shell-uart = &usart0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led0 {
			gpios = <&gpiof 7 GPIO_ACTIVE_HIGH>;
			label = "LED0";
		};
	};

	aliases {
		led0 = &led0;
	};
};

&gpiof {
	status = "okay";
};

&dma1 {
	status = "okay";
};

&usart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&usart0_default>;
	pinctrl-names = "default";
	dmas = <&dma1 7 4 0 0>, <&dma1 5 4 0 0>;
	dma-names = "tx", "rx";
};
